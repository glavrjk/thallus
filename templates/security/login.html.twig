<!DOCTYPE html>
<html>
	<head>
		{% include "skeleton/meta.html.twig" %}
		<title>Desafío Thallus</title>
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
		<link
		rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700"/>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
		<script type="text/javascript" src="{{ asset('build/material-dashboard.min.js') }}"></script>
	</head>

	<body class="bg-gray-200">
		<main class="main-content  mt-0">
			<div class="page-header align-items-start min-vh-100" style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80');">
				<span class="mask bg-gradient-dark opacity-6"></span>
				<div class="container my-auto">
					<div class="row">
						<div class="col-lg-4 col-md-8 col-12 mx-auto">
							<img src="{{ asset('assets/logo/logo.webp') }}" class="bg-gradient-dark shadow-dark p-3 rounded">
							<div class="card z-index-0 fadeIn3 fadeInBottom">
								<div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
									<div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
										<h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Inicia Sesión</h4>
									</div>
								</div>
								<div class="card-body">
									<form role="form" method="POST" class="text-start">
										<div class="input-group input-group-outline my-3">
											<label class="form-label" for="username">Usuario</label>
											<input class="form-control" type="text" value="{{ last_username }}" name="_username" id="username" required autofocus>
										</div>
										<div class="input-group input-group-outline mb-3">
											<label class="form-label" for="password">Contraseña</label>
											<input class="form-control" type="password" name="_password" id="password" required autocomplete>
										</div>
										<div class="form-check form-switch d-flex align-items-center mb-3">
											<input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me" checked>
											<label class="form-check-label mb-0 ms-2" for="remember_me">Mantenerme conectado</label>
										</div>
										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
										{% if error %}
											<div class="col-12 text-center">
												<div class="alert alert-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
											</div>
										{% endif %}
										{% if app.user %}
											<div class="col-12 text-center">
												<div class="alert alert-warning">Ya haz ingresado como
													{{ app.user.username }}
													<a class="link" href="{{ path('app_logout') }}" class="pl-4">Desconectar</a>
												</div>
											</div>
										{% endif %}
										<div class="text-center">
											<button type="submit" class="btn bg-gradient-secondary w-100 my-4 mb-2">Ingresar</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		</body>
	</body>
</html>
